@{
    ViewData["Education"] = "Utbildning";
    
    string[] collegeProgrammes = { ".Net Utvecklare", "Fordonsingenjör", "CNC-operatörsutbildning"};
    string[] collegeInstitutes = {"Teknikhögskolan","Ferrari University", "Yh i Kalmar AB" };
    string[] collegeCities = { "Gävle", "Milano, Italien", "Kalmar" };
    string[] collegeYears = {  "2020-02 - 2022-12", "2000-03 - 2004-01", "2004-01 - 2006-03" };

    ViewData["Courses"] = "Kurser";
    string[] courses = { "HLR - Hjärt och Lung räddning", "Truckkörkort", "Adobe Photoshop "};
    string[] courseInstitutes = {"HLR företaget AB"," Truck Utbildning AB", "Komvux i Kalmar" };
    string[] courseCities = { "Kalmar", "Oskarshamn", "Kalmar" };
    string[] courseYears = {  "2019-01 - 2021-01", "2000-03 - 2004-01", "2004-01 - 2006-03" };


    string[] collapseTargetsCollege = { "flush-collapseOne", "flush-collapseTwo", "flush-collapseThree" };
    string[] collapseTargetsCourse = { "flush-collapseFour", "flush-collapseFive", "flush-collapseSix" };

    //Nedan loopar vi igenom med en for loop. Varför? Jo för det blir väldigt enkelt att lägga till flera yrken. 
}



@*Utbildning START*@
<div class="container m-4">    
    <h1>@ViewData["Education"]</h1>    
</div>
<hr />
@for (var i = 0; i < collegeProgrammes.Length; i++)
{
<div class="accordion accordion-flush border" id="accordionFlushExample">
  <div class="accordion-item">
    <h5 class="accordion-header" id="flush-headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseTargetsCollege[i]" aria-expanded="true" aria-controls="@collapseTargetsCollege[i]">
        <div class="container">
            <div class="row">
                <div class="col">
                    @collegeYears[i]
                </div>
                <div class="col-4">
                    @collegeProgrammes[i]
                </div>
                <div class="col-3">
                    @collegeInstitutes[i]
                </div>
                <div class="col">
                    @collegeCities[i]
                </div>            
             </div>
        </div>       
      </button>
    </h5>
    <div id="@collapseTargetsCollege[i]" class="accordion-collapse   collapse " aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
          <div class="accordion-body">                                  
            <h6>Beskrivning av utbildning</h6>
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. <br />
            Dolorem natus, ipsum recusandae obcaecati, reprehenderit laudantium officia facere nostrum, iste impedit rerum hic sapiente! <br />
            Rerum quisquam obcaecati delectus repellat, quis ipsam.          
            </div>
      </div>
    </div>
  </div> 
</div>
}
@*Utbildning END*@

<div class="container m-4">    
    <h1>@ViewData["Courses"]</h1>
</div>
<hr />


@*Kurser START*@
@for (var i = 0; i < courses.Length; i++)
{
<div class="accordion accordion-flush border" id="accordionFlushExample">
  <div class="accordion-item">
    <h5 class="accordion-header" id="flush-headingOne">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseTargetsCourse[i]" aria-expanded="true" aria-controls="@collapseTargetsCourse[i]">
        <div class="container">
            <div class="row">
                <div class="col">
                    @courseYears[i]
                </div>
                <div class="col-4">
                    @courses[i]
                </div>
                <div class="col-3">
                    @courseInstitutes[i]
                </div>
                <div class="col">
                    @courseCities[i]
                </div>            
             </div>
        </div>       
      </button>
    </h5>
    <div id="@collapseTargetsCourse[i]" class="accordion-collapse   collapse " aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
          <div class="accordion-body">                                  
            <h6>Beskrivning av kurs</h6>
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. <br />
            Dolorem natus, ipsum recusandae obcaecati, reprehenderit laudantium officia facere nostrum, iste impedit rerum hic sapiente! <br />
            Rerum quisquam obcaecati delectus repellat, quis ipsam.          
            </div>
      </div>
    </div>
  </div> 
</div>
}

@*Kurser END*@



